@tailwind base;
@tailwind components;
@tailwind utilities;

$black =  #22292f
$grey-darkest = #3d4852
$grey-darker = #606f7b
$grey-dark = #8795a1
$grey = #b8c2cc
$grey-light = #dae1e7
$grey-lighter = #f1f5f8
$grey-lightest = #f8fafc
$white = #ffffff

$thead-bg-color = $grey-darkest
$thead-text-color = $grey-lighter
$td-bg-color = $grey-lightest
$td-bg-alt-color = $white
$td-hover-color = $grey-lighter

.table {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  font-size: 0.875rem;
  line-height: 1.5;
  
  &.main-first-cell {
    .tr {
      .td {
        flex-grow: 0;
        flex: none;
        width: 100px;
        text-align:center;
        justify-content: center;
        
        &:first-child {
          flex-grow: 1;          
          flex-direction: row;
          display: flex;
          justify-content: start
        }
      }
    }
  }
  
  &.striped {
    .tbody {
      .tr {
        &:nth-of-type(even) {
          .td {
            background-color: $td-bg-alt-color;
          }
        }
      }
    }
  }
  
  &.hovered {
    .tbody {
      .tr {
        &:hover {
          .td {
            background-color: $td-hover-color;
          }
        }
      }
    }
  }

  .thead {   
      font-weight: 700;
      .tr {
        .td {
          color: $thead-text-color;
          background-color: $thead-bg-color;
          text-transform: uppercase;
        }
      }
  }
  
  .tbody {
    .tr {
      .td {
        background-color: $td-bg-color;
      }
    }
  }
  .tr {
      display: flex;
      flex-flow: row nowrap;
      width: 100%;
    .td {
      display: flex;
      flex-flow: row nowrap;
      flex-grow: 1;
      flex-basis: 0;
      word-break: break-word;
      padding: 1rem; 
      margin: 0.25rem
    }
  }
}













